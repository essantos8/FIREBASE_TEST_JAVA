<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/jobCardPopup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:focusable="auto"
        android:longClickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textJobTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/salmapromedium"
                android:shadowColor="@color/mid_grey"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="Job Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/dashboard_blue"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="4dp"
                android:background="@color/dashboard_blue"
                android:foregroundTint="#000000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textJobTitle2"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/salmapromedium"
                android:text="Budget:  "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView52"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/salmapromedium"
                android:text="Date Posted: "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textJobStatus"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupCategories2"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/salmapromedium"
                android:text="Status: "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/chipGroupCategories2"
                app:layout_constraintVertical_bias="0.0" />


            <TextView
                android:id="@+id/textJobBudget2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/salmapromedium"
                android:text="XXXX PHP"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textJobDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/salmapromedium"
                android:text="date here"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView52"
                app:layout_constraintTop_toTopOf="@+id/textView52"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textJobStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/salmapromedium"
                android:text="status here"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView62"
                app:layout_constraintTop_toTopOf="@+id/textView62"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textJobWorkers2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/salmapromedium"
                android:text="num workers here"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView72"
                app:layout_constraintTop_toTopOf="@+id/textView72"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/salmapromedium"
                android:text="Workers: "
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textJobBudget2"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.0" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCategories2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textAlignment="center"
                app:checkedChip="@id/chipOther"
                app:chipSpacingHorizontal="2dp"
                app:chipSpacingVertical="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCarpentry2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:checkable="false"
                    android:checked="false"
                    android:clickable="true"
                    android:minWidth="0dp"
                    android:text="Carpentry"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPlumbing2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:checked="false"
                    android:minWidth="0dp"
                    android:text="Plumbing"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipElectrical2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:checked="false"
                    android:minWidth="0dp"
                    android:text="Electrical"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipElectronics2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:checked="false"
                    android:minWidth="0dp"
                    android:text="Electronics"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPersonalShopping2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:checked="false"
                    android:minWidth="0dp"
                    android:text="Personal Shopping"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVirtualAssistant2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:checked="false"
                    android:minWidth="0dp"
                    android:text="Virtual Assistant"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOther2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    android:checked="false"
                    android:minWidth="0dp"
                    android:text="Other"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/dashboard_blue"
                    app:chipEndPadding="6dp"
                    app:chipMinHeight="16dp"
                    app:chipMinTouchTargetSize="0dp"
                    app:chipStartPadding="6dp"
                    app:chipStrokeColor="#00FFFFFF"
                    app:chipStrokeWidth="1dp"
                    app:closeIconEndPadding="0dp"
                    app:closeIconStartPadding="0dp"
                    app:textEndPadding="0dp"
                    app:textStartPadding="0dp" />

            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>